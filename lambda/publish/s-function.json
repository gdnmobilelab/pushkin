{
  "name": "publish",
  "runtime": "nodejs4.3",
  "description": "Serverless Lambda function for project: pushy",
  "customName": false,
  "customRole": "${exec_role}",
  "handler": "publish.handler",
  "timeout": 6,
  "memorySize": 128,
  "authorizer": {},
  "custom": {
    "excludePatterns": []
  },
  "endpoints": [
    {
      "path": "topics/{topic}/publish",
      "method": "POST",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": true,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "action": "add",
          "topic": "$input.params('topic')",
          "subscription": "$input.json('$')",
          "apiKey": "$input.params('x-api-key')"
        }
      },
      "responses": "$${allResponseTemplates}"
    }
  ],
  "events": [],
  "environment": "$${environment}",
  "vpc": "$${vpc}"
}